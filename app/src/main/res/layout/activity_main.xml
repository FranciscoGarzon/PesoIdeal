<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="EL PESO IDEAL"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/text_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_marginTop="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/text_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nombre"
        android:layout_marginTop="16dp"
        android:hint="Día"
        android:inputType="number" />

    <EditText
        android:id="@+id/text_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dia"
        android:layout_marginTop="16dp"
        android:hint="Mes"
        android:inputType="number" />

    <EditText
        android:id="@+id/text_año"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mes"
        android:layout_marginTop="16dp"
        android:hint="Año"
        android:inputType="number" />

    <EditText
        android:id="@+id/text_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_año"
        android:layout_marginTop="16dp"
        android:hint="Peso" />

    <EditText
        android:id="@+id/text_estatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_peso"
        android:layout_marginTop="16dp"
        android:hint="Estatura" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_estatura"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Calcular IMC" />
</RelativeLayout>
